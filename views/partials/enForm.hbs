<body>


  <div class="container my-5">

    <div class="card ">

      <div class="card-header">
        Inscription
      </div>


      <div class="card-body">
        <form class="" action="/enConfirmation" method="post">

        <div class="form-group">

          <label for="nom">Name </label>
          <input class="form-control" id="name" type="text" name="nomField"  required>
<br>
          <label for="prenom">First Name </label>
          <input class="form-control" id="prenom" type="text" name="prenomField" required>
<br>
          <label for="pseudo">Pseudo </label>
          <input class="form-control" id="pseudo" type="text" name="pseudoField"  required>
<br>
          <label for="dateDeNaissance">Birth Date </label>
          <div class="input-group">
            <span class="input-group-addon">dd/mm/yyyy</span>
            <input class="form-control" id="dateDeNaissance" type="text" name="dateDeNaissanceField"required>
          </div>
<br>
          <label for="numTelephone">Telephone Number </label>
          <input class="form-control" id="numTelephone" type="text" name="numTelephoneField"  required>
<br>
          <label for="email">E-mail </label>
          <input class="form-control" id="email" type="text" name="emailField"  required>
          <small class="form-text text-muted">Your email will not be shared with anyone</small>
<br>
          <label for="modeDePaiment">Method of Payment</label>
          <select class="form-control" id="modeDePaiment" name="modeDePaimentField" >
          <option>Cash</option>
          <option>PayPal</option>
          </select>
          <!-- <small class="form-text text-muted">Les paiments en especes auront lieu a l'entree du tournoi</small> -->
<br>
          <input class="btn btn-primary btn-block" type="submit" value="Envoi">

        </div>

        </form>

      </div>

    </div>

  </div>


